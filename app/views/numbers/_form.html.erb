<%= simple_form_for :numbers, url: submit_numbers_path, html: { method: :put,  id: "numbers_form" } do |f| %>
  
  <%= f.input :first_number, as: :string, required: true, 
  						input_html: { maxlength: 1,  min: '1', max: '9',
  							class: "validate_equal",
  						data: { :validation => "number", "validation-allowing=" => "range[1;9]",
      					"validation-error-msg" => "This field should be a number between 1 and 9" } } %>
  
  <%= f.input :second_number, required: true, 
  						as: :string, input_html: { maxlength: 1, min: '1', max: '9',
  						class: "validate_equal",
  						data: { :validation => "number not_selected", "validation-allowing=" => "range[1;9]",
      					"validation-error-msg" => "This field should be a number between 1 and 9 and should be differente from the first number inserted" }  } %>

  <div><%= f.button :submit, "Process" %></div>
<% end %>